<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#1FBBA6"
    tools:context="com.crazychen.screenhelper.MainActivity" >
   
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_centerInParent="true"	   
	    >	  	  
	    <com.crazychen.screenhelper.CircleView
	       android:id="@+id/infoOperating"
	       android:layout_width="300dp"
	       android:layout_height="300dp"
	       android:layout_centerHorizontal="true"
	       android:scaleType="centerCrop"	
	       android:clickable="true"    
	       /> 
	    <TextView
	        android:id="@+id/info"
	        android:layout_below="@id/infoOperating"
	        android:layout_marginTop="30dp"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	    	android:textSize="20sp"
	        android:text="开启后点击Home键即可"
	        />
		<Button		
	    android:id="@+id/open"
	    android:layout_below="@id/info"
	    android:text="开启常亮"
	    android:layout_marginTop="10dp"
	    android:textColor="#ffffff"
	    android:textSize="25sp"
	    android:layout_centerHorizontal="true"
	    android:layout_width="280dp"
	    android:layout_height="57dp"
	    android:background="@drawable/open_btn"
	    />
	</RelativeLayout>
     <RelativeLayout android:id="@+id/adcontainer"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
	</RelativeLayout>
</RelativeLayout>
